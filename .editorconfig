root = true

[**{.js,.jsx,.html,.css,.scss,Makefile}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab

[*.{json,yml}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2
indent_style = space

[*.md]
indent_size = unset
indent_style = unset
trim_trailing_whitespace = false
