{
    "env": {
      "node": true,
      "browser": true,
      "commonjs": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "pragma": "h"
      }
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "react/prefer-stateless-function": [
        "error",
        "always"
      ],
      "react/prop-types": [ "off" ],
      "react/display-name": [ "off" ]
    }
}
