{
  "private": true,
  "scripts": {
    "postinstall": "athloi exec npm i -- --no-package-lock",
    "clean": "git clean -fxdi",
    "build": "athloi run build",
    "jest": "jest -c jest.config.js",
    "pretest": "npm run build",
    "test": "npm run lint && npm run jest",
    "lint": "eslint . --ext=js,jsx",
    "precommit": "secret-squirrel",
    "commitmsg": "secret-squirrel-commitmsg",
    "create-component": "node private/scripts/blueprint.js",
    "start-workbench": "(cd tools/x-workbench && npm start)",
    "start-docs": "(cd tools/x-docs && npm start)"
  },
  "devDependencies": {
    "@financial-times/athloi": "^1.0.0-beta.5",
    "@financial-times/secret-squirrel": "^2.10.1",
    "eslint": "^5.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "react": "^16.3.1",
    "react-test-renderer": "^16.3.1"
  },
  "x-dash": {
    "engine": {
      "server": {
        "runtime": "react",
        "factory": "createElement",
        "component": "Component"
      }
    }
  }
}
